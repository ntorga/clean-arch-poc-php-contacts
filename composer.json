{
  "name": "ntorga/clean-ddd-php-poc-contacts",
  "description": "A simple contact manager API to demonstrate the concepts of Clean Architecture and DDD with PHP 8.2+.",
  "authors": [
    {
      "name": "Northon Torga",
      "email": "northontorga+github@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\": "src/",
      "Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.2.10",
    "slim/slim": "^4.12",
    "slim/psr7": "^1.6",
    "vlucas/phpdotenv": "^5.5",
    "league/flysystem": "^3.19",
    "zircote/swagger-php": "^4.7",
    "doctrine/annotations": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.3",
    "phpstan/phpstan": "^1.10",
    "phpstan/phpstan-strict-rules": "^1.5",
    "phpstan/extension-installer": "^1.3",
    "phpstan/phpstan-beberlei-assert": "^1.1",
    "phpstan/phpstan-deprecation-rules": "^1.1"
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  }
}
